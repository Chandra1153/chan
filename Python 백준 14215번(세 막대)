a, b, c = map(int, input().split())
if a == b and b == c:
    print(a * 3)
elif max(a, b, c) == a:
    if a >= b + c:
        a = b + c - 1
    print(a + b + c)
elif max(a, b, c) == b:
    if b >= a + c:
        b = a + c - 1
    print(a + b + c)
elif max(a, b, c) == c:
    if c >= a + b:
        c = a + b - 1
    print(a + b + c)
