#include <stdio.h>


void main() {
	int i, j, n;
	scanf_s("%d", &n);
	for (i = 1; i < (2 * n - 1) * 2; i += 2) {
		if (i <= 9) {
			for (j = 0; j < n - (i / 2 + 1); j++)
				printf(" ");
			for (j = 0; j < i; j++)
				printf("*");
		}
		else {
			for (j = 0; j < (i / 2 + 1) - n; j++)
				printf(" ");
			for (j = 0; j < 2*n - i%n; j++)
				printf("*");
		}
		printf("\n");
	}
}
